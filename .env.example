# === LLM PROVIDER SETTINGS ===
LLM_PROVIDER=openai   # Options: openai, groq, ollama

# === SEARCH PROVIDER SETTINGS ===
SEARCH_PROVIDER=serper   # Options: serper, brave

# === API KEYS ===
OPENAI_API_KEY=your_openai_api_key
GROQ_API_KEY=your_groq_api_key
SERPER_API_KEY=your_serper_api_key
BRAVE_SEARCH_API_KEY=your_brave_api_key

# === OLLAMA SETTINGS (Optional if using Ollama) ===
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3

# === MODEL NAMES ===
REPHRASE_MODEL=gpt-4o-mini
ANSWER_MODEL=gpt-4o-mini
FOLLOWUP_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-ada-002

# === REDIS SETTINGS ===
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=      # Optional
REDIS_USE_UPSTASH=false

# === APPLICATION SETTINGS ===
REQUESTS_PER_MINUTE=30
CACHE_TTL_SECONDS=3600

# === OPTIONAL FEATURES ===
USE_FUNCTION_CALLING=true
USE_SEMANTIC_CACHE=false
